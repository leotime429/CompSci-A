        name = foodName;
        calories = foodCalories;
    }

	public String getName() {
		return name;
	}

	public void setName(String foodName) {
		name = foodName;
	}

	public int getCalories() {
		return calories;
	}

	public void setCalories(int foodCalories) {
		calories = foodCalories;
	}

	public String toString() {
		return name + " have " + calories + " calories";
	}
}
