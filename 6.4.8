public Student getMostImprovedStudent()
{
    Student mostImproved = this.students[0];
    for(int i = 0; i < this.numStudentsAdded; i++) {
        if(this.students[i].getExamRange() > mostImproved.getExamRange()) {
            mostImproved = this.students[i];
        }
    }
    return mostImproved;
}







