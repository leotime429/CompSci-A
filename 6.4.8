public int getExamRange()
{
    int minExam = this.exams[0];
    int maxExam = this.exams[0];
    
    for(int i = 1; i < this.numExamsTaken; i++) {
        if(this.exams[i] < minExam){
            minExam = this.exams[i];
        }      
        if(this.exams[i] > maxExam){
            maxExam = this.exams[i];
        }
    }
    return maxExam - minExam;
}







