public class FirstArray
{
    public static void main(String[] args)
    {
      int[] averageHighTemps = new int[] {104, 73, 80};
      String[] cities = new String[] {"Las Vegas", "Minsk", "Sao Paulo"};
      double[] averageAnnualPrecipitation = new double[]{4.17, 26.7, 55.0};

      System.out.println(cities[0] + " has an average annual precipitation of " + averageAnnualPrecipitation[0] + " inches."); 
      System.out.println(cities[0] + " has an average annual high temp of " + averageHighTemps[0] + " degrees Fahrenheit.");
      
      System.out.println(cities[1] + " has an average annual precipitation of " + averageAnnualPrecipitation[1] + " inches."); 
      System.out.println(cities[1] + " has an average annual high temp of " + averageHighTemps[1] + " degrees Fahrenheit.");
      
      System.out.println(cities[2] + " has an average annual precipitation of " + averageAnnualPrecipitation[2] + " inches."); 
      System.out.println(cities[2] + " has an average annual high temp of " + averageHighTemps[2] + " degrees Fahrenheit.");
    
    }
}
