public class NumberTriangle
{
    public static void main(String[] args)
    {  
       // Call makeNumberTriangle 
       makeNumberTriangle();
    }
     
    // Makes an upright triangle with the numbers 1-5
    public static void makeNumberTriangle()
    {
        int rows = 5;
        for(int i = 1; i <= rows; i++)
        {
              for(int j = 1; j <= i; j++)
              {
                 System.out.print(j + " ");
              }
              System.out.println("");
        }
    }
}
