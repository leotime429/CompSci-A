public class WorkShift
{
    public static void main(String[] args)
    {
        int hours = 20;
        int min = 42;
        int sec = 16;
        hours *= 60*60;
        min *= 60;
        int totalTime = hours + min + sec;
        System.out.println("The total time in seconds is:");
        System.out.println(totalTime);
      
    }
}
